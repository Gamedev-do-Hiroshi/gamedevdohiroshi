script/source = "extends Node2D

export(int, \"VERMELHO\", \"LARANJA\", \"AZUL\", \"GELO\") var poder = \"VERMELHO\"
var sentido = 1

const IMPULSO_BOLA = Vector2(1, -4) * 100
var velocidade = 0.0

const TEMPO_NEVE = 2.0
const IMPULSO_NEVE = Vector2(1, -1) * 300
var tempo = 0.0

func _ready():
	
	tempo = 0.0
	
	if poder != 0:
		$Bola.free()
	if poder != 2:
		$Bola_de_neve.free()
	if poder != 3:
		$Gelo.free()
	
	print(poder)
	
	if poder == 0:
		print(\"VERMELHO\")
		$Bola.apply_central_impulse(Vector2(sentido*IMPULSO_BOLA.x, IMPULSO_BOLA.y) + velocidade/10)
		$Bola.angular_velocity = sentido*10
	elif poder == 2:
		$Bola_de_neve.apply_central_impulse(Vector2(sentido*IMPULSO_NEVE.x, IMPULSO_NEVE.y) + velocidade/10)
	elif poder == 3:
		$Gelo.modulate = Color(1,1,1,0.9)
		print(\"GELOU\")
		
	
	pass
	
func _process(delta):
	
	tempo += delta
	
	if poder == 0:
		$Bola/Fogo.rotation = -$Bola.rotation + $Bola.linear_velocity.angle()
	elif poder == 2:
		#if tempo > TEMPO_NEVE:
		#	self.free()
		pass
	
	pass
	
func _physics_process(delta):
	
	if poder == 0:
		$Bola/Fogo.rotation = -$Bola.rotation + $Bola.linear_velocity.angle()
	elif poder == 2:
		#print($Bola_de_neve.contacts_reported)
		if $Bola_de_neve/Area2D.get_overlapping_areas().size() != 0 or $Bola_de_neve/Area2D.get_overlapping_bodies().size() != 0:
			if $Bola_de_neve/Area2D.get_overlapping_bodies() == [$Bola_de_neve]:
				return
			
			for x in $Bola_de_neve/Area2D.get_overlapping_bodies():
				print(x)
				if x.get_groups().has(\"player\"):
					x.gelado()
			
			print(\"Corpos: \" + String($Bola_de_neve/Area2D.get_overlapping_bodies()))
			
			self.free()
			print(\"SUMIU?\")
	
	pass
	
